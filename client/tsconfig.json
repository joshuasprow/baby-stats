{
  "extends": "@baby-stats/tsconfig/svelte.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "baseUrl": ".",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "tsconfig.json",
    "vite.config.ts",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.svelte"
  ],
  "references": [
    { "path": "@baby-stats/firebase" },
    { "path": "@baby-stats/lib" },
    { "path": "@baby-stats/models" }
  ]
}
